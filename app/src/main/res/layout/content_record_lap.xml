<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_record_lap"
        tools:context=".RecordLapActivity">

    <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/accX_text_record" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/accY_text_record" android:layout_marginTop="8dp"
            android:textAlignment="textEnd" android:text="0" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
            android:layout_height="wrap_content"
            android:id="@+id/accY_text_record" app:layout_constraintStart_toStartOf="@+id/accX_text_record"
            android:layout_width="60dp" app:layout_constraintTop_toBottomOf="@+id/accX_text_record"
            app:layout_constraintBottom_toTopOf="@+id/accZ_text_record" android:textAlignment="textEnd"
            android:text="0" android:layout_marginTop="16dp" android:layout_marginBottom="16dp"/>
    <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/accZ_text_record"
            app:layout_constraintStart_toStartOf="@+id/accX_text_record"
            app:layout_constraintTop_toBottomOf="@+id/accY_text_record"
            app:layout_constraintBottom_toBottomOf="parent" android:text="0" android:textAlignment="textEnd"/>
    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_monitoring_button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toStartOf="@+id/stop_monitoring_button"
            android:layout_marginBottom="56dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/stop_monitoring_button" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stop_monitoring_button"
            app:layout_constraintStart_toEndOf="@+id/start_monitoring_button" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="120dp" app:layout_constraintTop_toBottomOf="@+id/accZ_text_record"/>
    <Button
            android:text="RESULTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/print_db_content_button"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/start_monitoring_button"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.518"
            app:layout_constraintStart_toStartOf="@+id/start_monitoring_button"/>
    <Button
            android:text="CLEAR DB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clear_db_button" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/stop_monitoring_button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/print_db_content_button"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>