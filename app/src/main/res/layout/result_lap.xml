<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="52dp" android:id="@+id/result_lap_name" android:layout_weight="1"
            android:textAlignment="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="52dp" android:id="@+id/result_lap_date" android:layout_weight="1"
            android:textAlignment="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="52dp" android:id="@+id/result_lap_measurement_count"
            android:layout_weight="1" android:textAlignment="center"/>
</LinearLayout>